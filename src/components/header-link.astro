---
import { Icon } from "astro-icon/components";

export interface Props {
  label: string;
  href: string;
  external?: boolean;
  isActive?: boolean;
}

const { label, href, external = false, isActive = false } = Astro.props;
---

<a
  href={href}
  class={`inline-flex items-center px-2 py-2 text-label-sm font-sans text-black transition-colors duration-200 ${
    isActive ? "font-bold" : "font-normal"
  }`}
  target={external ? "_blank" : undefined}
>
  {isActive && <Icon name="arrow-right" class="mr-1 h-4 w-4" />}
  {label}
</a>
